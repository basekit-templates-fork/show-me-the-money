           </div>
           <div class="column columns-three-right">
                {{widget('content', 'footercolumn3', {"content":"<h3>Lorem &amp; Ipsodium</h3>"})|raw}}
                {{widget('companyaddress', 'companyaddressfooter', {})|raw}}    
           </div>
        </div>
    </div>
    <section class="footer2">
        <div class="wrapper clearfix">
            <div class="widget responsivecolumns columns-two-50-50">
                <div class="column columns-two-left">
                    {{widget('content', 'footer2column1', {"content":"<p>Uvitae sagittis Â© 2013. Placerat ac Nulla.</p>"})|raw}}
                </div>
                <div class="column columns-two-right">
