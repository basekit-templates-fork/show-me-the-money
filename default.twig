{% extends "layout.twig" %}

{% block content %}

 <header>

    <div class="header-main wrapper clearfix">
       {{widget('companyheader', 'companyheader', {"defaultlogo": asset('images/logo.png')})|raw}}
       <div class="header-main-right">
            <ul>
                <li>
                    <!-- <div class="widget content">
                        <div class="bk-content-text">
                            <h2>Make a donation today!</h2>
                        </div>
                    </div> -->

                    {{widget('content', 'content2', {content: '<h2>Make a donation today!</h2>', lines: 'all' })|raw}}
                </li>
                <li>
                    <!-- <div class="widget button">   
                        <button class="btn">
                            <span class="btnText">DONATE</span>
                        </button>
                    </div> -->

                    {{widget('button', 'button', {italic: false, text:'DONATE'})|raw}}
                </li>
            </ul>
        </div>
    </div>

    <div class="header-sub">
        <div class="wrapper clearfix">
            {{widget('extendednavigation', 'navigationheader', {})|raw}}
        </div>
    </div>

</header>

<!-- FEATURE ROW !-->
<section class="main wrapper clearfix">
    <section class="feature-row">
        <div class="widget responsivecolumns columns-two-65-35">
            <div class="column columns-two-left">
                {{widget('feature', 'featurehome', {"header": "", "strapline":"", "buttonText":"","originalImageWidth": "596", "originalOffsetCenter": "-178", "defaultBgImg": asset('images/feature-bg.jpg')})|raw}}
            </div>
            <div class="column columns-two-right">
                <div class="content-bg intro">
                   <!--  <div class="widget content">
                        <div class="bk-content-text">
